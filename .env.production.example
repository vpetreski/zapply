# PostgreSQL (for production deployment)
POSTGRES_USER=zapply
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=zapply

# Application
APP_NAME=Zapply
DEBUG=false

# Anthropic API
ANTHROPIC_API_KEY=your_api_key_here

# Job Sources - Working Nomads
WORKING_NOMADS_USERNAME=your_username
WORKING_NOMADS_PASSWORD=your_password

# Job Sources - Remotive (premium account)
REMOTIVE_USERNAME=your_email@example.com
REMOTIVE_PASSWORD=your_password

# Job Sources - DailyRemote (premium token for session activation)
DAILYREMOTE_TOKEN=your_premium_token_here

# Note: We Work Remotely uses RSS feeds (no credentials needed for scraping)

# Authentication
ADMIN_EMAIL=your_email@example.com
ADMIN_PASSWORD='$2b$12$...'  # Bcrypt hash - MUST use SINGLE quotes to prevent $ expansion!
JWT_SECRET_KEY=your_random_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=43200

# Optional: Minimum score (0-100) to consider a job matched (default: 60.0)
# MATCHING_MIN_SCORE_THRESHOLD=60.0

# CORS origins for production (comma-separated)
CORS_ORIGINS=http://your-server-ip:3000

# GitHub (for deployment)
GITHUB_REPOSITORY_OWNER=your_github_username
IMAGE_TAG=latest
